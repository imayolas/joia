{
  "name": "llamaws-monorepo",
  "scripts": {
    "build": "turbo run build --cache-dir=.turbo",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy": "npx run-p llamaq:production:deploy llamaws:production:deploy",
    "llamaws:production:deploy": "npm run production:deploy --workspace=apps/llamaws",
    "llamaq:production:deploy": "npm run build --workspace=apps/llamaq",
    "prepare": "npx husky install"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tsx": "^4.7.1",
    "turbo": "latest",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": "20"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,md}": "prettier --write"
  }
}
